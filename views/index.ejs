<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>User Registration</title>
<style>
    body {
        font-family: Arial, sans-serif;
    }
    form {
        max-width: 400px;
        margin: 0 auto;
    }
    input[type="text"],
    input[type="number"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        box-sizing: border-box;
    }
    select {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        box-sizing: border-box;
    }
    input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
    input[type="submit"]:hover {
        background-color: #45a049;
    }
</style>
</head>
<body>

<h2>FORM PEMESANAN</h2>

<form id="registrationForm" action="/submit" method="POST">
    <label for="id_transaksi">ID Transaksi:</label>
    <input type="text" id="id_transaksi" name="id_transaksi" required>

    <label for="nama">Nama:</label>
    <input type="text" id="nama" name="nama" required>

    <label for="alamat">Alamat:</label>
    <input type="text" id="alamat" name="alamat" required>

    <label for="no_hp">No HP:</label>
    <input type="text" id="no_hp" name="no_hp" required>

    <label for="kode_makanan">Makanan:</label>
    <select id="kode_makanan" name="kode_makanan" required onchange="calculateTotal()">
        <option value="13000">Nasi Goreng - Rp. 13.000</option>
        <option value="11000">Nasi Kebuli - Rp. 11.000</option>
        <option value="19000">Nasi Uduk - Rp. 19.000</option>
    </select>

    <label for="jumlah_beli">Jumlah Beli:</label>
    <input type="number" id="jumlah_beli" name="jumlah_beli" required oninput="calculateTotal()">

    <label for="total_bayar">Total Bayar:</label>
    <input type="number" id="total_bayar" name="total_bayar" required>

    <input type="submit" value="Kirim" onclick="showSuccessAlert()">
</form>

<script>
    function calculateTotal() {
        // Get the selected food price
        const selectedPrice = document.getElementById("kode_makanan").value;

        // Get the quantity input
        const jumlah_beli = document.getElementById("jumlah_beli").value;

        // Calculate total payment
        const total_bayar = selectedPrice * jumlah_beli;
        document.getElementById("total_bayar").value = total_bayar;

        // Calculate change (kembalian)
        const bayar = document.getElementById("bayar").value;
        const kembalian = bayar - total_bayar;
        document.getElementById("kembalian").value = kembalian;
    }

    function showSuccessAlert() {
        alert("Berhasil dikirim ke panel admin!");
    }
</script>

</body>
</html>